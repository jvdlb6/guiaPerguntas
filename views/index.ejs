<body>
    <%- include partials/navbar.ejs %>
    <div class="container">
        <br>
        <h1> PRSys - Sistema gerenciador de perguntas ! </h1>
        <hr>
        <% perguntas.forEach(pergunta => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <h3><%= pergunta.titulo %></h3>
                </div>
                <div class="card-footer">
                    <a href="/pergunta/<%= pergunta.id %>"</a><button class="btn btn-success">Responder</button></a>
                </div>
            </div>
        <% }) %>

    </div>

</body>
